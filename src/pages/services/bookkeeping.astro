  <script>
    // Enhanced Service Page Animation System
    document.addEventListener('DOMContentLoaded', function() {
      // Counter Animation for Stats
      function animateCounter(element: HTMLElement, target: number): void {
        const start = 0;
        const increment = target / 60; // 1 second animation
        let current = start;
        
        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            current = target;
            clearInterval(timer);
          }
          
          if (element.textContent?.includes('$')) {
            element.textContent = '$' + Math.floor(current).toLocaleString();
          } else {
            element.textContent = Math.floor(current).toString() + (element.dataset.suffix || '');
          }
        }, 16);
      }

      // Scroll Reveal Animation
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('revealed');
            
            // Trigger counter animations
            const counters = entry.target.querySelectorAll('.animate-counter');
            counters.forEach((counter, index) => {
              setTimeout(() => {
                const targetAttr = counter.getAttribute('data-target');
                if (targetAttr && counter instanceof HTMLElement) {
                  const target = parseInt(targetAttr);
                  animateCounter(counter, target);
                }
              }, index * 200);
            });

            // Trigger progress bar animations
            const progressBars = entry.target.querySelectorAll('.stat-progress');
            progressBars.forEach((bar, index) => {
              if (bar instanceof HTMLElement) {
                setTimeout(() => {
                  const progress = bar.getAttribute('data-progress');
                  if (progress) {
                    bar.style.width = progress + '%';
                  }
                }, index * 300);
              }
            });
          }
        });
      }, observerOptions);

      document.querySelectorAll('.scroll-reveal').forEach(el => {
        observer.observe(el);
      });

      // Magnetic Service Cards Effect
      document.querySelectorAll('.magnetic-service-card').forEach(card => {
        if (card instanceof HTMLElement) {
          card.addEventListener('mousemove', (e) => {
            const rect = card.getBoundingClientRect();
            const mouseEvent = e as MouseEvent;
            const x = mouseEvent.clientX - rect.left - rect.width / 2;
            const y = mouseEvent.clientY - rect.top - rect.height / 2;
            
            card.style.transform = `translate(${x * 0.05}px, ${y * 0.05}px) rotateX(${y * 0.05}deg) rotateY(${x * 0.05}deg)`;
            
            const glow = card.querySelector('.service-glow');
            if (glow instanceof HTMLElement) {
              glow.style.opacity = '1';
              glow.style.transform = `translate(${x * 0.1}px, ${y * 0.1}px)`;
            }
          });

          card.addEventListener('mouseleave', () => {
            card.style.transform = 'translate(0px, 0px) rotateX(0deg) rotateY(0deg)';
            
            const glow = card.querySelector('.service-glow');
            if (glow instanceof HTMLElement) {
              glow.style.opacity = '0';
              glow.style.transform = 'translate(0px, 0px)';
            }
          });
        }
      });

      // 3D Card Effect
      const card3d = document.querySelector('.card-3d');
      if (card3d instanceof HTMLElement) {
        card3d.addEventListener('mousemove', (e) => {
          const rect = card3d.getBoundingClientRect();
          const mouseEvent = e as MouseEvent;
          const x = mouseEvent.clientX - rect.left - rect.width / 2;
          const y = mouseEvent.clientY - rect.top - rect.height / 2;
          
          card3d.style.transform = `rotateY(${x * 0.02}deg) rotateX(${-y * 0.02}deg)`;
        });

        card3d.addEventListener('mouseleave', () => {
          card3d.style.transform = 'rotateY(0deg) rotateX(0deg)';
        });
      }
    });
  </script>

