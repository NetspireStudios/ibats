---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.tsx';
import Footer from '../../components/Footer.tsx';
---

<Layout title="Business Advisory Services | Strategic Business Consulting | IBATS Corp">
  <Navigation client:load />
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 bg-gradient-to-br from-primary-900 to-blue-900 text-white overflow-hidden">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80')] bg-cover bg-center opacity-10"></div>
    
    <div class="relative z-10 container-max px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          Business Advisory Services
        </h1>
        <p class="text-xl sm:text-2xl text-gray-200 mb-8 leading-relaxed">
          Strategic business consulting and advisory services to help you navigate complexities and achieve sustainable growth.
        </p>
        <a href="/contact" class="btn-primary bg-white text-primary-900 hover:bg-gray-100">
          Get Strategic Guidance
        </a>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
        <div>
          <h2 class="font-heading text-3xl font-bold text-primary-900 mb-6">
            Expert Business Consulting
          </h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            Our team of experienced professionals provides <strong>insightful business startup and advisory services</strong>, helping you navigate the complexities of establishing and growing your business. We offer <strong>strategic guidance</strong> to help you make informed decisions and achieve your business goals.
          </p>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            Whether you're starting a new venture or looking to optimize your existing operations, our business advisory services provide the expertise and support you need to succeed in today's competitive marketplace.
          </p>
        </div>
        <div class="relative">
          <img 
            src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80" 
            alt="Business consulting and strategic planning session" 
            class="rounded-lg shadow-xl"
          />
          <div class="absolute inset-0 bg-primary-900/10 rounded-lg"></div>
        </div>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <!-- Business Startup Consulting -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Business Startup Consulting
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Comprehensive guidance for new business ventures including business plan development, entity structure selection, and regulatory compliance.
          </p>
        </div>

        <!-- Strategic Planning -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Strategic Planning
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Develop comprehensive strategic plans that align with your business objectives and market opportunities.
          </p>
        </div>

        <!-- Financial Analysis -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Financial Analysis
          </h3>
          <p class="text-gray-600 leading-relaxed">
            In-depth financial analysis to identify opportunities for improvement and optimize your business performance.
          </p>
        </div>

        <!-- Process Optimization -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Process Optimization
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Streamline your business operations and improve efficiency through process analysis and optimization strategies.
          </p>
        </div>

        <!-- Risk Management -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.586-4.586a2 2 0 112.828 2.828L9 16.586V14h-2.586L9 16.586z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Risk Management
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Identify and mitigate business risks while developing strategies to protect and grow your business assets.
          </p>
        </div>

        <!-- Growth Strategy -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 12l2 2 4-4"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Growth Strategy
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Develop sustainable growth strategies that align with market opportunities and your business capabilities.
          </p>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="bg-gray-50 rounded-2xl p-8 lg:p-12 mb-16">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="font-heading text-3xl font-bold text-primary-900 mb-6">
              Why Choose Our Business Advisory Services?
            </h2>
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Expert Guidance</h3>
                  <p class="text-gray-600">Benefit from years of experience and industry knowledge to make informed business decisions.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Customized Solutions</h3>
                  <p class="text-gray-600">Receive tailored advice and strategies that address your specific business challenges and opportunities.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Sustainable Growth</h3>
                  <p class="text-gray-600">Focus on building sustainable business practices that support long-term success and profitability.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Ongoing Support</h3>
                  <p class="text-gray-600">Continuous support and guidance as your business evolves and faces new challenges.</p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <img 
              src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80" 
              alt="Business team collaboration and strategic planning" 
              class="rounded-lg shadow-lg"
            />
          </div>
        </div>
      </div>

      <!-- Industry Expertise -->
      <div class="mb-16">
        <div class="text-center mb-12">
          <h2 class="font-heading text-3xl font-bold text-primary-900 mb-4">
            Industry Expertise
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            We serve businesses across various industries with specialized knowledge and tailored solutions
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- E-commerce -->
          <div class="text-center p-6 bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-300">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-primary-900 mb-2">E-commerce</h3>
            <p class="text-gray-600 text-sm">Online retail and digital marketplace businesses</p>
          </div>

          <!-- Healthcare -->
          <div class="text-center p-6 bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-300">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-primary-900 mb-2">Healthcare</h3>
            <p class="text-gray-600 text-sm">Medical practices and healthcare service providers</p>
          </div>

          <!-- Technology -->
          <div class="text-center p-6 bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-300">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-primary-900 mb-2">Technology</h3>
            <p class="text-gray-600 text-sm">Software and technology service companies</p>
          </div>

          <!-- Professional Services -->
          <div class="text-center p-6 bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-300">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-primary-900 mb-2">Professional Services</h3>
            <p class="text-gray-600 text-sm">Consulting and professional service firms</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding gradient-bg">
    <div class="container-max text-center">
      <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-4">
        Ready to Take Your Business to the Next Level?
      </h2>
      <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
        Let our business advisory experts help you navigate challenges and achieve sustainable growth.
      </p>
      <a href="/contact" class="btn-primary bg-white text-primary-900 hover:bg-gray-100 text-lg px-8 py-4">
        Schedule Business Consultation
      </a>
    </div>
  </section>

  <Footer />
</Layout> 