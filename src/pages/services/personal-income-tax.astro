---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.tsx';
import Footer from '../../components/Footer.tsx';
---

<Layout title="Personal Income Tax Services | Individual Tax Preparation | IBATS Corp">
  <Navigation client:load />
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 bg-gradient-to-br from-primary-900 to-blue-900 text-white overflow-hidden">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1554224154-22dec7ec8818?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80')] bg-cover bg-center opacity-10"></div>
    
    <div class="relative z-10 container-max px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          Personal Income Tax Services
        </h1>
        <p class="text-xl sm:text-2xl text-gray-200 mb-8 leading-relaxed">
          Professional individual tax preparation and planning services to maximize your refund and minimize your tax burden.
        </p>
        <a href="/contact" class="btn-primary bg-white text-primary-900 hover:bg-gray-100">
          Maximize Your Tax Refund
        </a>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
        <div>
          <h2 class="font-heading text-3xl font-bold text-primary-900 mb-6">
            Expert Personal Tax Services
          </h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            At <strong>IBATS CORP.</strong>, we provide <strong>professional personal income tax services</strong> designed to help <strong>individuals maximize their tax refunds</strong> while ensuring <strong>full compliance with Canada Revenue Agency (CRA) requirements</strong>.
          </p>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            Our experienced tax professionals stay current with the latest <strong>tax laws and regulations</strong>, ensuring you claim every <strong>deduction, credit, and benefit</strong> you're entitled to receive.
          </p>
        </div>
        <div class="relative">
          <img 
            src="https://images.unsplash.com/photo-1434626881859-194d67b2b86f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2074&q=80" 
            alt="Personal tax preparation and individual financial planning" 
            class="rounded-lg shadow-xl"
          />
          <div class="absolute inset-0 bg-primary-900/10 rounded-lg"></div>
        </div>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <!-- Personal Tax Preparation -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Personal Tax Preparation
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Comprehensive preparation of individual income tax returns with careful attention to maximizing deductions and credits.
          </p>
        </div>

        <!-- Tax Planning -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Tax Planning
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Strategic tax planning to help you minimize your tax liability and optimize your financial situation throughout the year.
          </p>
        </div>

        <!-- Deduction Optimization -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Deduction Optimization
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Identify and maximize all eligible personal deductions including medical expenses, charitable donations, and employment expenses.
          </p>
        </div>

        <!-- Tax Credits -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Tax Credits
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Ensure you receive all available tax credits including GST/HST credit, Canada Child Benefit, and other government benefits.
          </p>
        </div>

        <!-- CRA Representation -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.586-4.586a2 2 0 112.828 2.828L9 16.586V14h-2.586L9 16.586z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            CRA Representation
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Professional representation and assistance with CRA inquiries, audits, and dispute resolution.
          </p>
        </div>

        <!-- Year-Round Advice -->
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-900 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-4">
            Year-Round Advice
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Ongoing tax advice and support throughout the year for major financial decisions and life changes.
          </p>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="bg-gray-50 rounded-2xl p-8 lg:p-12 mb-16">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="font-heading text-3xl font-bold text-primary-900 mb-6">
              Why Choose Our Personal Tax Services?
            </h2>
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Maximize Your Refund</h3>
                  <p class="text-gray-600">Our experts ensure you claim every deduction and credit to maximize your tax refund.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Stress-Free Experience</h3>
                  <p class="text-gray-600">Let us handle the complexities of tax preparation while you focus on what matters most to you.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Accurate & Compliant</h3>
                  <p class="text-gray-600">Ensure your tax return is accurate and fully compliant with CRA requirements.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-900 mb-1">Expert Knowledge</h3>
                  <p class="text-gray-600">Work with tax professionals who stay current with changing tax laws and regulations.</p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <img 
              src="https://images.unsplash.com/photo-1633158829585-23ba8f7c8caf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80" 
              alt="Individual tax planning and personal financial management" 
              class="rounded-lg shadow-lg"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding gradient-bg">
    <div class="container-max text-center">
      <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-4">
        Ready to Maximize Your Tax Refund?
      </h2>
      <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
        Let our personal tax experts help you get every dollar you deserve while staying fully compliant.
      </p>
      <a href="/contact" class="btn-primary bg-white text-primary-900 hover:bg-gray-100 text-lg px-8 py-4">
        Start Your Tax Return
      </a>
    </div>
  </section>

  <Footer />
</Layout> 