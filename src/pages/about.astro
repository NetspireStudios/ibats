	<script>
		// Enhanced Animation System with Kokonut UI inspired effects
		document.addEventListener('DOMContentLoaded', function() {
			// Counter Animation Function
			function animateCounter(element: HTMLElement, target: number, duration: number = 2000): void {
				const start = 0;
				const increment = target / (duration / 16);
				let current = start;
				
				const timer = setInterval(() => {
					current += increment;
					if (current >= target) {
						current = target;
						clearInterval(timer);
					}
					element.textContent = Math.floor(current).toString();
				}, 16);
			}

			// Scroll Reveal with Intersection Observer
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -50px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('revealed');
						
						// Trigger counter animation
						if (entry.target.querySelector('.counter')) {
							const counters = entry.target.querySelectorAll('.counter');
							counters.forEach((counter, index) => {
								setTimeout(() => {
									const targetAttr = counter.getAttribute('data-target');
									if (targetAttr && counter instanceof HTMLElement) {
										const target = parseInt(targetAttr);
										animateCounter(counter, target);
									}
								}, index * 200);
							});
						}
					}
				});
			}, observerOptions);

			// Observe all scroll reveal elements
			document.querySelectorAll('.scroll-reveal').forEach(el => {
				observer.observe(el);
			});

			// Parallax Effect for Hero Images
			window.addEventListener('scroll', () => {
				const scrolled = window.pageYOffset;
				const parallaxElements = document.querySelectorAll('.parallax-image');
				const parallaxBgs = document.querySelectorAll('.parallax-bg');
				
				parallaxElements.forEach(element => {
					if (element instanceof HTMLElement) {
						const speed = 0.3;
						const yPos = -(scrolled * speed);
						element.style.transform = `translateY(${yPos}px)`;
					}
				});

				parallaxBgs.forEach(element => {
					if (element instanceof HTMLElement) {
						const speed = 0.2;
						const yPos = -(scrolled * speed);
						element.style.transform = `translateY(${yPos}px) rotate(6deg) scale(1.1)`;
					}
				});
			});

			// Magnetic Cards Effect
			document.querySelectorAll('.magnetic-card').forEach(card => {
				if (card instanceof HTMLElement) {
					card.addEventListener('mousemove', (e) => {
						const rect = card.getBoundingClientRect();
						const mouseEvent = e as MouseEvent;
						const x = mouseEvent.clientX - rect.left - rect.width / 2;
						const y = mouseEvent.clientY - rect.top - rect.height / 2;
						
						card.style.transform = `translate(${x * 0.1}px, ${y * 0.1}px) scale(1.02)`;
					});

					card.addEventListener('mouseleave', () => {
						card.style.transform = 'translate(0px, 0px) scale(1)';
					});
				}
			});
		});
	</script>

	<style>
		/* Kokonut UI Inspired Animations */
		
		/* Falling Shapes Animation */
		.falling-shapes {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			pointer-events: none;
			overflow: hidden;
		}

		.shape {
			position: absolute;
			border-radius: 50%;
			background: linear-gradient(45deg, rgba(59, 130, 246, 0.2), rgba(37, 99, 235, 0.3));
			animation: fallAndFloat 15s infinite linear;
		}

		.shape-1 {
			width: 20px;
			height: 20px;
			left: 10%;
			animation-delay: 0s;
		}

		.shape-2 {
			width: 15px;
			height: 15px;
			left: 25%;
			animation-delay: -3s;
		}

		.shape-3 {
			width: 25px;
			height: 25px;
			left: 50%;
			animation-delay: -6s;
		}

		.shape-4 {
			width: 18px;
			height: 18px;
			left: 75%;
			animation-delay: -9s;
		}

		.shape-5 {
			width: 22px;
			height: 22px;
			left: 85%;
			animation-delay: -12s;
		}

		.shape-6 {
			width: 16px;
			height: 16px;
			left: 90%;
			animation-delay: -15s;
		}

		@keyframes fallAndFloat {
			0% {
				transform: translateY(-100px) rotate(0deg);
				opacity: 0;
			}
			10% {
				opacity: 1;
			}
			90% {
				opacity: 1;
			}
			100% {
				transform: translateY(calc(100vh + 100px)) rotate(360deg);
				opacity: 0;
			}
		}

		/* Morphing Text Animation */
		.morphing-text {
			animation: morphText 4s ease-in-out infinite;
		}

		@keyframes morphText {
			0%, 100% {
				transform: skew(0deg, 0deg) scale(1);
			}
			25% {
				transform: skew(2deg, 1deg) scale(1.02);
			}
			50% {
				transform: skew(-1deg, -0.5deg) scale(0.98);
			}
			75% {
				transform: skew(1deg, 0.5deg) scale(1.01);
			}
		}

		/* Floating Cards */
		.floating-card {
			background: white;
			padding: 1rem;
			border-radius: 1rem;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			animation: floatCard 3s ease-in-out infinite;
		}

		@keyframes floatCard {
			0%, 100% {
				transform: translateY(0px) rotate(0deg);
			}
			50% {
				transform: translateY(-10px) rotate(1deg);
			}
		}

		/* Magnetic Cards */
		.magnetic-card {
			background: white;
			padding: 2rem;
			border-radius: 1.5rem;
			box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
			transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
			cursor: pointer;
		}

		/* Icon Float Animation */
		.icon-float {
			animation: iconFloat 6s ease-in-out infinite;
		}

		@keyframes iconFloat {
			0%, 100% {
				transform: translateY(0px) rotate(0deg);
			}
			33% {
				transform: translateY(-8px) rotate(2deg);
			}
			66% {
				transform: translateY(4px) rotate(-1deg);
			}
		}

		/* Scroll Text Animation */
		.scroll-text {
			background: linear-gradient(90deg, #3b82f6, #1d4ed8, #2563eb, #3b82f6);
			background-size: 200% 100%;
			-webkit-background-clip: text;
			background-clip: text;
			color: transparent;
			animation: scrollText 3s linear infinite;
		}

		@keyframes scrollText {
			0% {
				background-position: 0% 50%;
			}
			100% {
				background-position: 200% 50%;
			}
		}

		/* Approach Items Animation */
		.approach-item {
			opacity: 0;
			transform: translateX(-30px);
			animation: slideInLeft 0.6s ease-out forwards;
		}

		@keyframes slideInLeft {
			to {
				opacity: 1;
				transform: translateX(0);
			}
		}

		/* Dashboard Mockup Animations */
		.dashboard-mockup {
			animation: dashboardEntry 1s ease-out;
