---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.tsx';
import Footer from '../components/Footer.tsx';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="IBATS - Premier Business & Tax Services | Expert Accounting Solutions">
	<Navigation client:load />
	
	<!-- Enhanced Hero Section with Fluid Gradient -->
	<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
		<!-- Thick Gradient Background with Fluid Balls -->
		<div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900">
			<!-- Two Large Fluid Moving Balls -->
			<div class="fluid-ball fluid-ball-1"></div>
			<div class="fluid-ball fluid-ball-2"></div>
			<!-- Additional ambient blobs -->
			<div class="blob blob-1"></div>
			<div class="blob blob-2"></div>
		</div>

		<div class="container-max relative z-10">
			<div class="grid lg:grid-cols-2 gap-8 items-center min-h-[80vh]">
				
				<!-- Left Content - Centered and Smaller -->
				<div class="scroll-reveal text-center lg:text-left">
					<div class="inline-flex items-center px-3 py-2 bg-blue-100 rounded-full text-blue-700 text-sm font-medium mb-4">
						<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
						Canada's Most Trusted Financial Partners
					</div>
					
					<h1 class="text-3xl lg:text-4xl xl:text-5xl font-extrabold text-white mb-4 leading-tight tracking-tight">
						Your Premier
						<span class="text-gradient-hero block">Business & Tax Partners</span>
					</h1>
					
					<p class="text-lg text-gray-200 mb-6 leading-relaxed max-w-xl mx-auto lg:mx-0 font-medium">
						Empowering Canadian businesses with expert accounting, tax solutions, and strategic advisory services for over two decades.
					</p>
					
					<!-- CTA Buttons -->
					<div class="flex flex-col sm:flex-row gap-3 mb-8 justify-center lg:justify-start">
						<a href="/contact" class="hero-btn-primary">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
							</svg>
							Get Free Consultation
						</a>
						<a href="/services" class="hero-btn-secondary">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
							</svg>
							Explore Services
						</a>
					</div>

					<!-- Stats Row - Centered -->
					<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 max-w-lg mx-auto lg:mx-0">
						<div class="text-center">
							<div class="counter text-2xl font-bold text-cyan-400 mb-1" data-target="1000">0</div>
							<p class="text-xs text-gray-300 font-medium">Happy Clients</p>
						</div>
						<div class="text-center">
							<div class="counter text-2xl font-bold text-cyan-400 mb-1" data-target="20">0</div>
							<p class="text-xs text-gray-300 font-medium">Years Experience</p>
						</div>
						<div class="text-center">
							<div class="counter text-2xl font-bold text-cyan-400 mb-1" data-target="99">0</div>
							<p class="text-xs text-gray-300 font-medium">Success Rate %</p>
						</div>
						<div class="text-center">
							<div class="text-2xl font-bold text-cyan-400 mb-1">24/7</div>
							<p class="text-xs text-gray-300 font-medium">Support</p>
						</div>
					</div>
				</div>

				<!-- Right Image -->
				<div class="scroll-reveal stagger-1">
					<div class="relative">
						<div class="absolute inset-0 bg-gradient-to-br from-blue-400/20 to-blue-600/30 rounded-3xl blur-2xl transform rotate-6"></div>
						<img 
							src="https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80" 
							alt="Professional business team collaborating" 
							class="relative w-full h-80 lg:h-96 object-cover rounded-3xl shadow-2xl"
						/>
						<div class="absolute inset-0 bg-gradient-to-tr from-blue-600/10 to-transparent rounded-3xl"></div>
						
						<!-- Floating Card -->
						<div class="absolute -bottom-4 -left-4 bg-white rounded-2xl p-4 shadow-xl border border-blue-100">
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-700 rounded-xl flex items-center justify-center">
									<svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
								</div>
								<div>
									<p class="text-sm font-semibold text-gray-900">Trusted by 1000+</p>
									<p class="text-xs text-gray-600">Canadian Businesses</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Services Section -->
	<section class="section-padding bg-white">
		<div class="container-max">
			<div class="text-center mb-16 scroll-reveal">
				<h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Our Premium Services</h2>
				<p class="text-lg text-gray-600 max-w-2xl mx-auto">Comprehensive financial solutions tailored to your business needs</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				<!-- Service 1 -->
				<div class="card p-6 scroll-reveal hover-lift group">
					<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
						<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
							<path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zM14 6a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2h6zM4 14a2 2 0 002 2h8a2 2 0 002-2v-2H4v2z"/>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-3">Tax Preparation & Planning</h3>
					<p class="text-gray-600 mb-4">Expert tax strategies to minimize your liability and maximize returns for individuals and businesses.</p>
					<a href="/services/personal-income-tax" class="inline-flex items-center text-blue-600 font-medium hover:text-blue-800">
						Learn More 
						<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
						</svg>
					</a>
				</div>

				<!-- Service 2 -->
				<div class="card p-6 scroll-reveal hover-lift group stagger-1">
					<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
						<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V4a2 2 0 00-2-2H6zm1 2a1 1 0 000 2h6a1 1 0 100-2H7zm6 7a1 1 0 011 1v3a1 1 0 11-2 0v-3a1 1 0 011-1zm-3 3a1 1 0 100 2h.01a1 1 0 100-2H10zm-4 1a1 1 0 011-1h.01a1 1 0 110 2H7a1 1 0 01-1-1zm1-4a1 1 0 100 2h.01a1 1 0 100-2H7zm2 0a1 1 0 100 2h.01a1 1 0 100-2H9zm2 0a1 1 0 100 2h.01a1 1 0 100-2H11zm2 0a1 1 0 100 2h.01a1 1 0 100-2H13zm-4-3a1 1 0 100 2h.01a1 1 0 100-2H9zm2 0a1 1 0 100 2h.01a1 1 0 100-2H11zm2 0a1 1 0 100 2h.01a1 1 0 100-2H13z"/>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-3">Bookkeeping & Accounting</h3>
					<p class="text-gray-600 mb-4">Accurate financial records and reporting to keep your business running smoothly and compliant.</p>
					<a href="/services/bookkeeping" class="inline-flex items-center text-blue-600 font-medium hover:text-blue-800">
						Learn More 
						<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
						</svg>
					</a>
				</div>

				<!-- Service 3 -->
				<div class="card p-6 scroll-reveal hover-lift group stagger-2">
					<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
						<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
							<path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-3">Business Advisory</h3>
					<p class="text-gray-600 mb-4">Strategic guidance and consulting services to help your business grow and thrive in competitive markets.</p>
					<a href="/services/business-advisory" class="inline-flex items-center text-blue-600 font-medium hover:text-blue-800">
						Learn More 
						<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose Us Section -->
	<section class="section-padding gradient-bg">
		<div class="container-max">
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div class="scroll-reveal">
					<h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">Why Choose IBATS?</h2>
					<p class="text-lg text-gray-600 mb-8">We combine decades of expertise with cutting-edge technology to deliver exceptional results for our clients.</p>
					
					<div class="space-y-4">
						<div class="flex items-center gap-4">
							<div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
								<svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-gray-900">Certified Professionals</h3>
								<p class="text-gray-600">Licensed accountants and tax specialists</p>
							</div>
						</div>

						<div class="flex items-center gap-4">
							<div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
								<svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-gray-900">100% Accuracy Guarantee</h3>
								<p class="text-gray-600">Error-free returns or we'll pay the penalties</p>
							</div>
						</div>

						<div class="flex items-center gap-4">
							<div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
								<svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"/>
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-gray-900">Bank-Level Security</h3>
								<p class="text-gray-600">Your data is protected with enterprise encryption</p>
							</div>
						</div>
					</div>
				</div>

				<div class="scroll-reveal stagger-1">
					<div class="relative">
						<div class="absolute inset-0 bg-gradient-to-br from-blue-400/20 to-blue-600/30 rounded-3xl blur-2xl"></div>
						<div class="relative bg-white/80 backdrop-blur-sm rounded-3xl p-8 border border-blue-100">
							<div class="text-center mb-6">
								<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center mx-auto mb-4">
									<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/>
										<path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"/>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Real-Time Analytics</h3>
								<p class="text-gray-600">Track your financial health with our advanced dashboard</p>
							</div>
							
							<div class="space-y-3">
								<div class="bg-blue-50 rounded-xl p-3">
									<div class="flex justify-between items-center mb-2">
										<span class="text-sm font-medium text-gray-700">Monthly Revenue</span>
										<span class="text-sm font-bold text-green-600">+15%</span>
									</div>
									<div class="w-full bg-blue-100 rounded-full h-2">
										<div class="bg-gradient-to-r from-green-400 to-green-600 h-2 rounded-full" style="width: 75%"></div>
									</div>
								</div>
								
								<div class="bg-blue-50 rounded-xl p-3">
									<div class="flex justify-between items-center mb-2">
										<span class="text-sm font-medium text-gray-700">Tax Savings</span>
										<span class="text-sm font-bold text-blue-600">+32%</span>
									</div>
									<div class="w-full bg-blue-100 rounded-full h-2">
										<div class="bg-gradient-to-r from-blue-400 to-blue-600 h-2 rounded-full" style="width: 85%"></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Testimonials Section with Navigation Arrows -->
	<section class="section-padding bg-gray-50 relative overflow-hidden">
		<div class="container-max">
			<div class="text-center mb-6 scroll-reveal">
				<h2 class="text-xl lg:text-2xl font-bold text-gray-900 mb-2">What Our Clients Say</h2>
				<p class="text-sm text-gray-600 max-w-lg mx-auto">Real stories from businesses who've transformed their financial operations with IBATS</p>
			</div>

			<div class="relative max-w-4xl mx-auto">
				<!-- Navigation Arrows -->
				<button class="carousel-arrow carousel-arrow-left absolute left-4 top-1/2 transform -translate-y-1/2 z-20">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
					</svg>
				</button>
				
				<button class="carousel-arrow carousel-arrow-right absolute right-4 top-1/2 transform -translate-y-1/2 z-20">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
					</svg>
				</button>

				<!-- Testimonial Carousel -->
				<div class="testimonial-carousel flex transition-transform duration-1000 ease-in-out">
					<!-- Testimonial 1 -->
					<div class="testimonial-carousel-card flex-shrink-0 w-full px-8">
						<div class="bg-white rounded-xl p-5 lg:p-6 shadow-lg border border-gray-100 relative overflow-hidden">
							<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-blue-600"></div>
							
							<div class="flex items-center mb-4">
								<div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center mr-3">
									<span class="text-white font-bold text-lg">SM</span>
								</div>
								<div>
									<h4 class="text-lg font-bold text-gray-900">Sarah Mitchell</h4>
									<p class="text-sm text-gray-600">Tech Startup Founder</p>
								</div>
							</div>
							
							<div class="flex mb-4">
								<svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
								</svg>
								<svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
								</svg>
								<svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
								</svg>
								<svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
								</svg>
								<svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
								</svg>
							</div>
							
							<blockquote class="text-base lg:text-lg text-gray-700 italic leading-relaxed font-medium">
								"IBATS has been instrumental in our company's growth. Their expertise in tax planning saved us thousands, and their business advisory services helped us make strategic decisions that increased our revenue by 40%."
							</blockquote>
						</div>
					</div>

					<!-- Testimonial 2 -->
					<div class="testimonial-carousel-card flex-shrink-0 w-full px-8">
						<div class="bg-white rounded-xl p-5 lg:p-6 shadow-lg border border-gray-100 relative overflow-hidden">
